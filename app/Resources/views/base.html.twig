<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Главная{% endblock %} - Моя библиотека</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
            <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('intaro_library_homepage') }}">Моя библиотека</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        {% block nav %}
                            <li><a href="{{ path('intaro_library_about') }}">О сайте</a></li>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <li><a href="{{ path('intaro_library_add') }}">Добавить книгу</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">Выйти</a></li>
                            {% else %}
                            <li><a href="{{ path('fos_user_security_login') }}">Войти</a></li>
                            <li><a href="{{ path('fos_user_registration_register') }}">Регистрация</a></li>
                            {% endif %}
                        {% endblock %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="page-header">
                <h1>{% block h1 %}Welcome!{% endblock %}</h1>
            </div>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
            <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
