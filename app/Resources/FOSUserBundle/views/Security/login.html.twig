{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}Авторизация{% endblock %}
{% block h1 %}Авторизация{% endblock %}

{% block fos_user_content %}
{% if error %}
    <p class="alert alert-danger">{{ error|trans }}</p>
{% endif %}
<form action="{{ path("fos_user_security_check") }}" method="post" role="form">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="form-group">
        <label for="username">Логин</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
    <div class="form-group">
        <label for="password">Пароль</label>
        <input class="form-control" type="password" id="password" name="_password" required="required" />
    </div>
    <div class="checkbox">
        <label for="remember_me">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Запомнить
        </label>
    </div>
    <button type="submit" id="_submit" name="_submit" class="btn btn-default" value="Войти">Войти</button>
</form>
{% endblock fos_user_content %}
